/*
// Singly Linked List
// Insert At First Position
// Insert At End
// Insert At a digit in a particular position
// Delete a digit / Deletion
// Reverse of a Linked List
// Search a Digit in a Particular Position
// Sorted Element (Ascending Order)
#include <iostream>
using namespace std;
// Node Structure
class Node
{
public:
    int data;   // Stores Value
    Node *next; // Stores address to next node
    // Constructor
    Node(int val)
    {
        data = val;
        next = nullptr;
    }
};

// Insert At End
class LinkedList
{
public:
    Node *head;
    LinkedList()
    {
        head = nullptr;
    }
    // Insert At Beginning
    void insertAtBeginning(int val)
    {
        // Step-1: Create new Node
        Node *newNode = new Node(val);
        // Step-2 : Newnode point to current head
        newNode->next = head;
        // Step-3 : Move head to newNode
        head = newNode;
    }
    void insertAtEnd(int val)
    {
        // Step-1 :  Create new Node
        Node *newNode = new Node(val);
        // If list is empty
        if (head == NULL)
        {
            head = newNode;
            return;
        }
        // Step-2 : Traverse to last node
        Node *temp = head;
        while (temp->next != NULL)
        {
            temp = temp->next;
        }
        // Step-3 : Attach new Node at end
        temp->next = newNode;
    }
    // InsertAtPosition
    void insertAtPosition(int key,int k){
        if(k<0){
            cout<<"Invalid Position"<<endl;
            return;
        }
        Node* newNode = new Node(key);
        if(k==0){
            newNode->next=head;
            head=newNode;
            return;
        }
        int counter =1 ;
        Node* current;
        current = head;
        while(current!=nullptr&&counter<(k-1)){
            current=current->next;
            counter++;
        }
        if(current==nullptr){
            cout<<"Invalid Position"<<endl;
            delete newNode;
            return;
        }
        newNode->next = current ->next;
        current->next = newNode;
        return;
    }
    // Delete a Particular Position
    void deleteAtValue(int key){
        if(head==nullptr){
            cout<<"Invalid Position"<<endl;
            return;
        }

        // Delete at first position
        Node *temp;
        if(head->data==key){
            temp=head;
            head=head->next;
            delete temp;
            return;
        }
        // Delete at middle or end
        Node *current;
        current = head;
        while(current->next!=nullptr&&current->next->data!=key){
            current = current ->next;
        }
        if(current->next==nullptr){
            cout<<"Element not found"<<endl;
            return;
        }
        temp=current->next;
        current->next = current->next->next;
        delete temp;
        return;
    }
    // Reverse a Linked List
    // Reverse means to change in arrows not data
    void reverse(){
        // 3 Pointers
        Node* prev =nullptr;// Previous = Node behind current noode
        Node* curr= head ; // Current = Current Node / Present Linked List
        Node* next= nullptr;// next = Save next node
        while(curr!=nullptr){
            next = curr->next;// Save Current neext;
            curr->next = prev;
            prev=curr;// Move previous
            curr=next;// Move Current
        }
        head = prev;
       // head -> 5 -> 10 ->20->NULL
       // head / Current -> 20->10->5->NULL
       // Next = [10];
       // Current -> next = NULL;
       // Result : 5-> NULL;
       // prev= 5;
       // Curr=10;
    }
    //Search At a data in Linked List
    bool search(int key){
        // Always use a temporary pointer
        Node* temp = head;//Start from head
        while(temp!=nullptr){
            if(temp->data==key){
                return true;// found
            }
            temp=temp->next;// move forward
        }
        return false;// not found
    }

    // Traversal Display
    void display()
    {
        Node *temp = head;
        while (temp != NULL)
        {
            cout << temp->data << "->";
            temp = temp->next;
        }
        cout << "NULL" << endl;
    }
};
int main()
{
    LinkedList myList;
    myList.insertAtBeginning(5);
    myList.insertAtEnd(10);
    myList.insertAtEnd(20);
    myList.insertAtPosition(15,3);
    myList.display();
    myList.deleteAtValue(10);
    myList.display();
    if (myList.search(3)){
        cout<<"Found."<<endl;
    }else{
        cout<<"Not Found."<<endl;
    }
    myList.reverse();
    myList.display();
    return 0;
}
// Sorted a Linked List 
// Delete Duplicate Elements 
#include <iostream>
using namespace std;
class Node
{
public:
    int data;
    Node *next;
    Node(int val)
    {
        data = val;
        next = nullptr;
    }
};
class LinkedList
{
public:
    Node *head;
    LinkedList()
    {
        head = nullptr;
    }
    // InsertAtFirstPosition
    void insertAtFirstPosition(int key){
        Node* newNode = new Node(key);
        newNode->next = head ;
        head = newNode;
    }
    // Insert At Last Position
    void insertAtLastPosition(int key){
        Node* newNode = new Node(key);
        if(head == nullptr){
            cout<<"Invalid Linked List."<<endl;
            return;
        }
        Node* temp=head;
        while(temp->next!=nullptr){
            temp= temp->next ;
        }
        temp->next = newNode ;
    }
    // Delete Duplicates
    void deleteDuplicates()
    {
        if (head == nullptr)
            return;
        Node *current = head;
        while (current != nullptr && current->next != nullptr)
        {
            if (current->data == current->next->data)
            {
                Node *temp = current->next;
                current->next = current->next->next;
                delete temp;
            }
            else
            {
                current = current->next;
            }
        }
    }
    // Sorted a Linked List (Ascending Order)
    void sortedAlinkedList(int key)
    {
        // Create a newNode -> newNode->data:=key and newNode->next:=NULL
        Node *newNode = new Node(key);
        // Insert At First Position
        if (head == nullptr || key < head->data)
        {
            newNode->next = head;
            head = newNode;
            return;
        }
        Node *current = head;
        while (current->next != nullptr && current->next->data < key)
        {
            current = current->next;
        }
        newNode->next = current->next;
        current->next = newNode;
    }
    // Traversal Display
    void display()
    {
        Node *temp = head;
        while (temp != nullptr)
        {
            cout << temp->data << "->";
            temp = temp->next;
        }
        cout << "X" << endl;
    }
};
int main()
{
    LinkedList myList;
   // myList.sortedAlinkedList(5);
    //myList.sortedAlinkedList(2);
    //myList.sortedAlinkedList(10);
    //myList.sortedAlinkedList(30);
    //myList.sortedAlinkedList(1);
    myList.insertAtFirstPosition(2);
    myList.insertAtLastPosition(5);
    myList.insertAtLastPosition(7);
    myList.insertAtLastPosition(7);
    myList.insertAtLastPosition(9);
    myList.deleteDuplicates();
    myList.display();
}

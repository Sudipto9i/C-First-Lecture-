// Function to check identical 
bool areIdentical(Node* h1 , Node*h2){
    while(h1!=nullptr&&h2!=nullptr){
        // This line checks value :
        if(h1->data!=h2->data){
            return false;
        }
        h1 = h1->next;
        h2 = h2->next;
    }
    // This line checks length:
    return(h1==nullptr&&h2==nullptr);
}

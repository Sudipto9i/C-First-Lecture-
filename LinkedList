// Delete the Linked List
// Merge Two Linked List 
#include<iostream>
using namespace std;
class Node{
    public:
    int data;
    Node* next;
    Node(int val){
        data = val;
        next=nullptr;
    }
};
class LinkedList{
    public:
    Node* head;
    LinkedList(){
        head = nullptr;
    }
    // Just Comment Out this for my merge two linked lists 
   // void insertAtFirst(int key){
      //  Node* newNode = new Node(key);
      //  newNode->next = head ;
       // head = newNode;
    //}
    void insertAtEnd(int key){
        Node* newNode = new Node(key);
        if(head == nullptr){
            head = newNode ;
            return;
        }
        Node* temp= head;
        while(temp->next!=nullptr){
            temp=temp->next;
        }
        temp->next = newNode;
    }
    // Merge two linked lists
    void merge (LinkedList &other){
        if(head == nullptr){
            head = other.head;
            return;
        }
        Node* temp=head;
        while(temp->next!=nullptr){
            temp=temp->next;
        }
        temp->next=other.head;
    }
    // Check if list is sorted 
    bool isSorted(){
        if(head==nullptr||head->next==nullptr){
            return true;
        }
        Node* temp= head;
        while(temp->next!=nullptr){
            if(temp->data>temp->next->data){
                return false ;
            }
            temp=temp->next;
        }
        return true ;
    }
   
    void display(){
        Node* temp = head ;
        while(temp!=nullptr){
            cout<<temp->data<<"->";
            temp=temp->next;
        }
        cout<<"X"<<endl;
    }
     // Destructor: delete entire list
   // ~LinkedList(){
     //   Node* current =head ;
      //  while(current!=nullptr){
      //      Node* temp=current ;
      //      current = current ->next;
       //     delete temp;
       // }
       // head = nullptr;
       // cout<<"Linked list memmory freed!"<<endl;
   // }
};
int main(){
    LinkedList l1 , l2 ;
   // myList.insertAtFirst(5);
    l1.insertAtEnd(10);
    l1.insertAtEnd(20);
    l1.insertAtEnd(30);
    cout<<"List 1: ";
    l1.display();
    l2.insertAtEnd(35);
    l2.insertAtEnd(45);
    l2.insertAtEnd(55);
    cout<<"List 2: ";
    l2.display();
    l1.merge(l2);
    cout<<"Merged List: ";
    l1.display();
    if(l1.isSorted()){
        cout<<"List is sorted"<<endl;
    }else{
        cout<<"List is nnot sorted "<<endl;
    }

    // Destructor runs automatically here
    return 0 ;
}

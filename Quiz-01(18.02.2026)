//Q3.
//->Reverse an array without using another array.
#include<iostream>
using namespace std ;
int main(){
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    int left = 0;
    int right = n-1 ;
    while(left<right){
        int temp = arr[left];
        arr[left]=arr[right];
        arr[right]=temp;
        left++;
        right--;
    }
    cout<<"\nReverse Array:\n";
    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
    return 0;
}


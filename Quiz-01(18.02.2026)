//->Section B â€” Linked List (Core)
//->Q6.
//->Insert a node at the beginning of a linked list.
//->Q7.
//->Insert a node at the end of a linked list.
//->Q8.
//->Search an element in a linked list and return its position.
//->If not found â†’ print â€œNot foundâ€
#include<iostream>
using namespace std;
class Node{
    public:
    int data;
    Node* next;
    Node(int val){
        data = val;
        next = nullptr;
    }
};
class LinkedList{
    private:
    Node* head;
    public:
    LinkedList(){
        head = nullptr;
    }
    //Insert at the Beginning
    void insertAtBeginning(int n){
        Node* newNode = new Node(n);
        newNode->next = head ;
        head = newNode;
    }
    //Insert At End
    void insertAtEnd(int n){
        Node* newNode = new Node(n);
        if(head==nullptr){
            newNode->next = head;
            head = newNode;
            return;
        }
        Node* temp=head;
        while(temp->next!=nullptr){
            temp=temp->next;
        }
        temp->next = newNode;
        newNode = temp;
    }
    void searchFound(int n){
        bool found=false ;
        int pos = 0;
        Node* temp = head;
        while(temp!=nullptr){ 
            if(temp->data==n){
                cout<<"Found. Position:"<<pos<<endl;
                found = true;
                break;
            }
            temp=temp->next;
            pos++;
        }
        if(!found){
            cout<<"Not Found\n";
        }
    }
    //Q9
    //->Count number of nodes in a linked list.
    void CountNumberOfNodes(){
        int count =0;
        Node* temp=head;
        while(temp!=nullptr){
            temp=temp->next;
            count++;
        }
        cout<<"Number of nodes:"<<count<<endl;
    }
    //Q10. (Important)
    //->Delete a node by value (delete first occurrence).
    void deleteNodeByValue(int n){
        if(head ==nullptr)return ;
        if(head->data==n){
            Node* temp=head;
            head = head->next;
            delete temp;
        }
        Node* current = head;
        while(current->next!=nullptr&&current->next->data!=n){
            current = current ->next;
        }
        Node* temp=current->next;
        current->next = current->next->next;
        delete temp;
        return;
    }
    //Q11
    //->Check if a linked list is sorted.
    bool isSorted(){
        if(head==nullptr||head->next==nullptr){
            return true;
        }
        Node* temp=head;
        while(temp->next!=nullptr){
            if(temp->data>temp->next->data){
                return false;
            }
            temp=temp->next;
        }
        return true;
    }
    //Q12
    //->Find the middle element using two pointers
    void findMiddle(){
        if(head==nullptr){
            cout<<"Invalid Linked List"<<endl;
            return;
        }
        Node* slow = head;
        Node* fast = head;
        while(fast!=nullptr&&fast->next!=nullptr){
            slow = slow->next;
            fast = fast->next->next;
        }
        cout<<"Middle Element: "<<slow->data<<endl;
    } 
    //Q13
    //->Reverse a linked list(iterative)
    void reverseLinkedList(){
        Node* prev = nullptr;
        Node* curr= head;
        Node* next = nullptr;
        while(curr!=nullptr){
            next=curr->next;
            curr->next =prev;
            prev = curr;
            curr=next;
        }
        head = prev;
    }
    //Display
    void display(){
        Node* temp=head;
        while(temp!=nullptr){
            cout<<temp->data<<"->";
            temp=temp->next;
        }
        cout<<"X\n";
    }
};
int main(){
    LinkedList l;
    l.insertAtBeginning(5);
    l.insertAtEnd(10);
    l.insertAtEnd(15);
    l.insertAtEnd(10);
    l.display();
    l.searchFound(4);
    l.CountNumberOfNodes();
    l.deleteNodeByValue(10);
    l.display();
    if(l.isSorted()){
        cout<<"Sorted\n";
    }else{
        cout<<"Not Sorted\n";
    }
    l.findMiddle();
    l.reverseLinkedList();
    l.display();
}

// Linked List = data + Link;
//Three type of Linked List here. So today I just want to discuss only in singly linked list .
// Singly Linked List = Points to next nodes.
// Doubly Linked List = Points to next & previous 
// Circular Linked List = Lasr node point to first node 
//Singly Linked List 4 different types of function I would like to introduce you too guys.
 // 1. Insert a value in a  Particular Position
 // 2. Delete at Particular Value From Linked List 
 // 3. Reverse The Linked List 
 // 4. Search a value in Linked List 
 // nOW , Lets start
#include<iostream>
using namespace std;
// In C++ our class always want a semicolon at the end .

class Node{
    // In C++ variables are always belongs in private .
    // If we need to access this from annotheer class it must be needed to declare public .
    public:
    int data;//Stores data
    Node* next ;// Points towards neext
    // Constructor
    Node(int val){
        data = val;// Assign value 
        next = nullptr;// Initialize with nullptr Or U should also apply NULL
    }
};
class LinkedList{
    public:
    Node* head ;
    // Constructor 
    LinkedList(){
        head = nullptr;// Assign head pointers towards null
    }
    // First POsition insertion function
    void insertAtFirstPosition(int key){
        Node* newNode = new Node(key);// Value include in newNode
        // This 2 Line our moto is 
        // 1 . Attach first , Move letter .
        newNode ->next = head ;
        head =newNode;
    }
    // Insert at End Function
    void insertAtEnd(int key){
        Node* newNode=new Node(key);
        Node* temp= head;
        if(head==nullptr){
            head = newNode;
            return;
        }
        // Traversal
        while(temp->next!=nullptr){
            temp= temp->next;
        }
        temp->next = newNode;
    }
    // Now Our time to do our most important think in Linked LIst.
    // Insert A Particular Value in Particular Position
    void insertAtParticularValue(int key,int k){
        // so what our thinking 
        // Inside a node its go 5 -> 10 -> 20 -> NULL
        // We just only think about which way we approach
        // Our target is position value check
        if(k<0){
            cout<<"Invalid Position"<<endl;
            return;
        }//Then our thinking is at our first node .
        // that means zero nodes check
        // Insert At First node
        Node* newNode= new Node(key); 
        if(k==0){
            newNode ->next = head;
            head= newNode;
            return;
        }
        // Then our target is insert at middle or end 
        int counter = 0;
        Node* curr = head;
        while(curr->next!=nullptr && counter<(k-1)){
            curr=curr->next;
        }
        newNode->next = curr->next;// Attach newNode to current node 
        curr->next = newNode;// Move Current 
        return;
    }
    // Our Second Function is delete at particular position
    void deleteAtPosition(int key){
        if(head == nullptr){// head is checked 
            cout<<"LInked List is Empty.";
            return;
        }
        Node* temp;
        // Delete at First
        if(head-> data == key){
            temp= head ;
            head=  head->next;
            delete temp ; 
            return;
        }
        // Delete at middle or ENd 
        Node* current=head ;
        while (current -> next !=nullptr&&current->next->data!= key){
            current = current -> next;
        }
        // JUst For too LOng Process
        if(current->next==nullptr){
            cout<<"Element not found "<<endl;
            return;
        }
        temp=current->next;
        current->next = current->next->next;
        delete temp;
        return;
    }
    // Reverse A LInked List 
    void reverse (){
        // we need three pointers . We remember previous , current and a next;
        Node* prev=nullptr ;//previous = Node behind current node 
        Node* next = nullptr; // next = Stores A node 
        Node* curr=head ; // Current = To remember where we stand right at now
        // Also we have to think that our previous and next must be empty 
        // SO , when we swap it will will be easy 
        // Now : 5->10->20->NULL
        // After: 20->10->5->NULL
        // Just to reverse our array sign not to change our data
        while(curr!=nullptr){
            next = curr->next ; // Stores our next values 
            // then what ? 
            curr->next = prev ;
            prev = curr;// move prev
            curr=next ;// move curr
        }
        // At last we have to remember 
        head = prev;// (most important )
    }
    // Now our last function to find a digit in linked list 
    bool search(int key){
        // what we think right now;
        // Assign head 
        Node* temp=head;
        while(temp!=nullptr){
            if(temp->data==key){
                return true;
            }
            // sorry its my fault
            temp=temp->next;
        }
        return false ;
    }
    // Display
    void display(){
        Node* temp=head;
        while(temp!=nullptr){
            cout<<temp->data<<"->";
            temp = temp->next;
        }
        cout<<"NULL"<<endl;
    }
};
// Now In main file we just run our code 
// so we ensure our code did not show any bugs .
int main(){
    //Call our class function by mentioned a object 
    LinkedList myList;
    myList.insertAtFirstPosition(5);
    myList.insertAtEnd(10);
    myList.insertAtEnd(20);
    myList.insertAtEnd(30);
    myList.display();
    // Lets Check our Insertion at particular position
    myList.insertAtParticularValue(15,2);
    myList.display();
    myList.deleteAtPosition(30);
    myList.display();
    myList.reverse();
    myList.display();
    if(myList.search(20)){
        cout<<"Found"<<endl;
    }else {
        cout<<"Not Found/n";
    }
}

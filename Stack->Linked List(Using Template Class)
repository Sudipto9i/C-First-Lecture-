//Step-1:What is a Stack?
//A stack is a data structure that follows:
//LIFO: Last In, First Out
//Step-2---- Core Operations(Very Important)
//There are only 5 things:
//Operation             // Meaning
//push()                 Insert element
//pop()                  Remmove top element 
//peek()                 See top element
//isEmpty()              Check if empty
//isFull()               (array version only)
//That's it
//Stack is MUCH smaller than linked list
#include<iostream>
using namespace std;
template<class T>
class LinkedList{
    private:
    //Node inside template
    struct Node{
        T data;
        Node* next;
        Node(T val){
            data = val;
            next = nullptr;
        }
    };
    Node* head;
    public:
    //Constructor
    LinkedList(){
        head = nullptr;
    }
    //Insert at Beginning
    void insertAtBeginning(T val){
        Node* newNode = new Node(val);
        newNode->next = head;
        head = newNode;
    }
    //Insert at End
    void insertAtEnd(T val){
        Node* newNode = new Node(val);
        if(head == nullptr){
            head = newNode;
            return;
        }
        Node* temp=head;
        while(temp->next !=nullptr){
            temp=temp->next;
        }
        temp->next = newNode;
    }
    //Insert at Position(0-based)
    void insertAtPosition(T val, int pos){
        if(pos<0){
            cout<<"Invalid Position\n";
            return;
        }
        if(pos==0){
            insertAtBeginning(val);
            return;
        }
        Node* temp=head;
        int counter=0;
        while(temp!=nullptr&&counter<(pos-1)){
            temp=temp->next;
            counter++;
        }
        if(temp==nullptr){
            cout<<"Position out of range\n";
            return;
        }
        Node* newNode = new Node(val);
        newNode->next = temp->next;
        temp->next = newNode;
    }
    // Delete by Value
    void deleteByValue(T val) {
        if (head == nullptr) {
            cout << "List is Empty\n";
            return;
        }

        if (head->data == val) {
            Node* temp = head;
            head = head->next;
            delete temp;
            return;
        }

        Node* temp = head;
        while (temp->next != nullptr && temp->next->data != val) {
            temp = temp->next;
        }

        if (temp->next == nullptr) {
            cout << "Value Not Found\n";
            return;
        }

        Node* nodeToDelete = temp->next;
        temp->next = temp->next->next;
        delete nodeToDelete;
    }

    // Search
    void search(T key) {
        Node* temp = head;
        int pos = 0;

        while (temp != nullptr) {
            if (temp->data == key) {
                cout << "Found at position " << pos << endl;
                return;
            }
            temp = temp->next;
            pos++;
        }

        cout << "Not Found\n";
    }

    // Count Nodes
    int count() {
        int cnt = 0;
        Node* temp = head;
        while (temp != nullptr) {
            cnt++;
            temp = temp->next;
        }
        return cnt;
    }

    // Reverse List
    void reverse() {
        Node* prev = nullptr;
        Node* curr = head;
        Node* next = nullptr;

        while (curr != nullptr) {
            next = curr->next;
            curr->next = prev;
            prev = curr;
            curr = next;
        }

        head = prev;
    }

    // Display
    void display() {
        Node* temp = head;
        while (temp != nullptr) {
            cout << temp->data << " -> ";
            temp = temp->next;
        }
        cout << "X\n";
    }

    // Destructor
    ~LinkedList() {
        Node* temp;
        while (head != nullptr) {
            temp = head;
            head = head->next;
            delete temp;
        }
    }
};

int main() {

    // You can use int
    LinkedList<int> list;

    list.insertAtBeginning(5);
    list.insertAtEnd(10);
    list.insertAtEnd(15);
    list.insertAtPosition(12, 2);

    cout << "Linked List:\n";
    list.display();

    list.deleteByValue(10);
    cout << "\nAfter Deleting 10:\n";
    list.display();

    list.search(15);

    cout << "Total Nodes: " << list.count() << endl;

    list.reverse();
    cout << "\nAfter Reversing:\n";
    list.display();

    return 0;
}
